@using Stripe.Controllers
@model Stripe.Controllers.CustomerPaymentViewModel

@{
    ViewBag.Title = "Credit Card";
}

<div class="row">
    <div class="col-lg-12">

        <form asp-action="CreditCard" asp-controller="Donation" method="POST" id="payment-form" class="form-horizontal">
            <span class="payment-errors"></span>

            <input hidden asp-for="DonationId"/>

            <div class="form-group">
                <label class="col-sm-2 control-label">Card Number</label>
                <input asp-for="CardNumber" class="form-control"/>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">CVC</label>
                <input asp-for="Cvc" class="form-control"/>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Expiration (MM/YYYY)</label>
                <input asp-for="ExpiryMonth"/>
                <input asp-for="ExpiryYear"/>
            </div>
            <br/>
            <button id="submit" type="submit">Submit Payment</button>
        </form>
    </div>
</div>
