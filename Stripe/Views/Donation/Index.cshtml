@using Stripe.Controllers
@model Stripe.Controllers.CustomerSubscriptionViewModel

@{
    ViewBag.Title = "Subscriptions";
}
<div class="row">
    <div class="col-lg-12">

        @if (Model.Subscriptions == null || !Model.Subscriptions.Any())
        {
            <h2>There are no subscriptions for now</h2>
        }
        else
        {

            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>Subscription Name</td>
                        <td>Currency</td>
                        <td>Amount</td>
                        <td>Status</td>
                        <td></td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var subscription in Model.Subscriptions)
                {
                        <tr>
                            <td>@subscription.Name</td>
                            <td>@subscription.Currency</td>
                            <td>@(subscription.Amount / 100)</td>
                            <td>@subscription.Status</td>
                            <td><a class="btn btn-primary" asp-action="Delete" asp-route-subscriptionId=@subscription.Id>Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@if (!Model.Subscriptions.Any())
{

    <div class="row">
        <div class="col-lg-12">

            <form asp-action="Payment" asp-controller="Donation" method="POST" id="payment-form" class="form-horizontal">
                <span class="payment-errors"></span>

                <input hidden asp-for="DonationId"/>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Card Number</label>
                    <input asp-for="CardNumber" class="form-control"/>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">CVC</label>
                    <input asp-for="Cvc" class="form-control"/>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Expiration (MM/YYYY)</label>
                    <input asp-for="ExpiryMonth"/>
                    <input asp-for="ExpiryYear"/>
                </div>
                <br/>
                <button id="submit" type="submit">Submit Payment</button>
            </form>
        </div>
    </div>
}